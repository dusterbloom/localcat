OPENAI_API_KEY=""
DEEPGRAM_API_KEY=""
RIME_API_KEY=""

# ------- HotMem Retrieval & Semantics -------
# Use LEANN semantic search for KG triples (optional)
HOTMEM_USE_LEANN=false
# Complexity (trade-off quality/latency) for LEANN search
HOTMEM_LEANN_COMPLEXITY=16
# Enable fusion of KG + FTS + (optional) LEANN summaries in retrieval
HOTMEM_RETRIEVAL_FUSION=false
# Use LEANN to semantically search summaries (requires index with summaries)
HOTMEM_USE_LEANN_SUMMARIES=false

# Storage paths (relative to server/ by default)
HOTMEM_SQLITE=memory.db
HOTMEM_LMDB_DIR=graph.lmdb

# ------- Summarizer (LLM) -------
SUMMARIZER_ENABLED=true
SUMMARIZER_BASE_URL=http://127.0.0.1:11434/v1
SUMMARIZER_MODEL=qwen3:4b
SUMMARIZER_MAX_TOKENS=160
SUMMARIZER_LOG_SUMMARIES=false
SUMMARIZER_INTERVAL_SECS=30

# ------- Logging -------
HOTMEM_LOG_LEVEL=INFO
HOTMEM_CONSOLE_DEBUG=true

# ------- Prompt + Context -------
# base|free (free can be overridden by LIBERATION_TOP_SYSTEM_PROMPT)
PROMPT_VARIANT=base
# Hard cap for packed context (system + memory + summaries + dialogue)
CONTEXT_BUDGET_TOKENS=4096
